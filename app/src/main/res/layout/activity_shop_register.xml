<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/white"
    tools:context=".ShopRegister">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Create your new \naccount"
        android:textColor="#000000"
        android:paddingTop="20dp"
        android:textSize="32sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:text="Create an account to start looking for the food you like"
        android:textColor="#0E516C"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Email"
        android:textColor="#625D5D"
        android:layout_marginTop="40dp"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/shop_email_r"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your Email"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_text_shape"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Name"
        android:textColor="#625D5D"
        android:layout_marginTop="10dp"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/shop_name_r"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your Name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_text_shape"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="User Name"
        android:textColor="#625D5D"
        android:layout_marginTop="10dp"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/shop_userName_r"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your User Name"
        android:inputType="text"
        android:maxLength="10"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_text_shape"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Province"
        android:textColor="#625D5D"
        android:layout_marginTop="10dp"
        android:textSize="14sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:hintEnabled="false"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:id="@+id/shop_province"
            android:hint="Select Province"
            android:background="@drawable/edit_text_shape"
            android:layout_height="wrap_content"
            android:inputType="none"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="District"
        android:textColor="#625D5D"
        android:layout_marginTop="10dp"
        android:textSize="14sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:hintEnabled="false"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">
        <AutoCompleteTextView
            android:id="@+id/shop_district"
            android:layout_width="match_parent"
            android:hint="Select District"
            android:background="@drawable/edit_text_shape"
            android:layout_height="wrap_content"
            android:inputType="none"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Address"
        android:textColor="#625D5D"
        android:layout_marginTop="10dp"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/shop_address_r"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your Name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_text_shape"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Password"
        android:textColor="#625D5D"
        android:layout_marginTop="10dp"
        android:textSize="14sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        app:hintEnabled="false"
        app:hintAnimationEnabled="false"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/shop_password_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Password"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_text_shape"/>

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Confirm Password"
        android:textColor="#625D5D"
        android:layout_marginTop="10dp"
        android:textSize="14sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        app:hintEnabled="false"
        app:hintAnimationEnabled="false"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/shop_password_again_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Password"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edit_text_shape"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/shop_register_r"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:background="@drawable/button_shape"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="Alreay have an account? "
            android:textColor="#625D5D"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/shop_login_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=" Sign In"
            android:layout_marginBottom="20dp"
            android:textColor="#FE8C00"
            android:layout_marginTop="10dp"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>

</ScrollView>